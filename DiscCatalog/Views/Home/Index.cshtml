<!DOCTYPE html>
<html ng-app="discCatalogApp">  
    <head lang="en">
        <meta charset="utf-8">
        <title>Disc Catalog</title>  

        <link href="~/Content/ng-grid.min.css" rel="stylesheet" />
        <link href="~/Content/angular-ui.min.css" rel="stylesheet" />
        <link href="~/Content/style.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
        <link href="~/Content/themes/base/jquery.ui.theme.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-1.9.1.min.js"></script>
        <script src="~/Scripts/angular.min.js"></script>
        <script src="~/Scripts/ng-grid.min.js"></script>
        <script src="~/Scripts/app/app.js"></script>
    </head>
    <body ng-controller="discCtrl">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Disc Catalog</a>
                </div>
            </div>
        </div>
        <br/><br/><br/>
        <div class="container">
            <div class="gridStyle" ng-grid="gridOptions"></div>
            <br/>
            <form name="myForm">
                <b> {{action}} </b>
                <br/>
                <table>
                    <tr> <td>Name</td>
                        <td class="cellStyle"> <input type="text" ng-model="newDisc.Name" /></td>
                    </tr>
                    <tr>
                        <td>Artist</td>
                        <td class="cellStyle"> <input type="text" ng-model="newDisc.Artist" /></td>
                    </tr>
                    <tr>
                        <td>Gener</td>
                        <td class="cellStyle"> <input type="text" ng-model="newDisc.Gener" /></td>
                    </tr>
                    <tr>
                        <td>Year</td>
                        <td class="cellStyle"><input type="text" ng-model="newDisc.Year" /></td>
                    </tr>
                </table>
                <br />
                <input id="BtnSubmit" class="btn-success" style="margin:0; padding:0; width:70px; height:30px;" ng-click="updateDisc()" type="submit" value="save" />
                <input id="BtnCancel" class="btn-danger" style="margin:0; padding:0; width:70px; height:30px;" ng-click="cancel()" type="submit" value="cancel" />
            </form>
        </div>
    </body>
</html>